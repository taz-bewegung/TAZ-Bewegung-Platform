<div id="contacts" class="edit-container">
  
          <%= render :partial => "/shared/profile_edit_header", :locals => { :header => "Ansprechpartner", 
                                                                     :object => @organisation,
                                                                     :path => edit_part_my_helpedia_organisation_path(@organisation, :part => "contacts"), 
                                                                     :prefix => "contacts",
                                                                     :button => image_tag("buttons/btn-edit.png")
                                                                    } -%>  
  
  <div class="clearfloats edit-profile">
    <div class="one-column">
      <dl>
        <dt><%= Organisation.human_attribute_name("contact_name") -%>:</dt>
        <dd><%=v @organisation.contact_name -%></dd>
        <dt><%= Organisation.human_attribute_name("contact_phone") -%>:</dt>
        <dd><%=v @organisation.contact_phone -%></dd>          
        <dt><%= Organisation.human_attribute_name("contact_email") -%>:</dt>
        <dd><%=v @organisation.contact_email -%></dd>          
      </dl>          
    </div>
  </div>
</div>