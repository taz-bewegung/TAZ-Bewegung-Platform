<div id="contacts">

  <div class="edit-part-head">
    <div class="title">
      <h1>Ansprechpartner</h1>
    </div>
    <%= link_to image_tag("buttons/btn-close.png"), 
              cancel_edit_part_my_helpedia_organisation_path(@organisation, :part => "contacts"), 
              :class => "ajax-link",
              :rel => "#{@organisation.object_id}-contacts-spinner" -%>              
  </div>
  
  <div class="edit-part-content">  
    <%- form_for(@organisation, 
                :url => my_helpedia_organisation_url(@organisation, :part => "contacts"), 
                :builder => EditFormBuilder,                                                          
                :html => { :class => "remote-form",
                           :rel => "#{@organisation.object_id}-contacts-spinner" }) do |f| -%>

    <table width="100%" class="reg-form" rowspan="0" colspan="0">                                                               
    <%= f.text_field :contact_name, :required => true %>
    <%= f.text_field :contact_email, :required => true %>
    <%= f.text_field :contact_phone, :required => true %>    
    </table>    
    
      <div class="edit-part-bottom">
        <div class="buttons">
          <%= image_submit_tag "buttons/btn-save.png", :class => "submit-input" %>
          <%= link_to image_tag("buttons/btn-cancel.png"), 
                      cancel_edit_part_my_helpedia_organisation_path(@organisation, :part => "contacts"),
                      :class => "ajax-link",
                      :rel => "#{@organisation.object_id}-contacts-spinner" -%>
        </div>
        <div class="edit-form-spinner">
          <%= image_tag "ajax-spinner.gif", :id => "#{@organisation.object_id}-contacts-spinner", :style => "display: none" -%>
        </div>                            
      </div>     

      <%- end -%>
    </div>
  </div>