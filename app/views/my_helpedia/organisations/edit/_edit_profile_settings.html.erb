<div id="profile_settings"  class="edit-container">

  <div class="edit-part-head">
    <div class="title">
      <h1>Einstellungen</h1>
    </div>
    <%= link_to image_tag("buttons/btn-close.png"), 
                cancel_edit_part_my_helpedia_organisation_path(@organisation, :part => "profile_settings"), 
                :class => "ajax-link",
                :rel => "#{@organisation.object_id}-profile-settings-spinner"                
                 -%>
  </div>

  <div class="edit-part-content">
    <%- form_for(@organisation, 
                :url => my_helpedia_organisation_url(@organisation, :part => "profile_settings"), 
                :builder => EditFormBuilder,                
                :html => { :class => "remote-form",
                           :rel => "#{@organisation.object_id}-profile-settings-spinner" } ) do |f| -%>

    <table width="100%" class="reg-form" rowspan="0" colspan="0"> 
      <%= f.text :contact_email, :required => false -%>
      <tr>
        <th></th>
        <td style="padding: 10px 0 10px 4px; font-style: italic;">Passwort nur eingeben, wenn es geÃ¤ndert werden soll</td>
      </tr>
      <%= f.text_field :password, :required => false -%>
      <%= f.text_field :password_confirmation, :required => true -%>    
      <%= f.check_box :subscribed_newsletter %>
    </table>

     <div class="edit-part-bottom">
       <div class="buttons">
         <%= image_submit_tag "buttons/btn-save.png", :class => "submit-input" %>
         <%= link_to image_tag("buttons/btn-cancel.png"), 
                     cancel_edit_part_my_helpedia_organisation_path(@organisation, :part => "profile_settings"),
                     :class => "ajax-link",
                     :rel => "#{@organisation.object_id}-profile-settings-spinner" -%>
       </div>
       <div class="edit-form-spinner">
         <%= image_tag "ajax-spinner.gif", :id => "#{@organisation.object_id}-profile-settings-spinner", :style => "display: none" -%>
       </div>                            
     </div>     
    <%- end -%>
  </div>
</div>