<div id="activity_texts" class="edit-container">  
  
  <div class="edit-part-head">
    <div class="title">
      <h1>Texte &amp; Video</h1>
    </div>
    <%= link_to image_tag("buttons/btn-close.png"), 
                cancel_edit_part_my_helpedia_activity_path(@activity, :part => "activity_texts"), 
                :class => "ajax-link",
                :rel => "#{@activity.object_id}-activity-texts-spinner"                
                 -%>
  </div>
  
  <div class="edit-part-content">  
  <%- form_for(@activity, 
              :url => my_helpedia_activity_path(@activity, :part => "activity_texts"), 
              :builder => EditFormBuilder,
              :html => { :class => "remote-form" ,
                         :rel => "#{@activity.object_id}-activity-texts-spinner" } ) do |f| -%>

  <table width="100%" class="reg-form" rowspan="0" colspan="0">
    <%= f.text_area :goal, :required => true, :maxlength => 140, :style => "height: 80px",
                                 :after_html => '<div class="chars-remaining">a</div>'-%>
    <%= f.text_area :participation, :required => true, :maxlength => 140, :style => "height: 80px",
                              :after_html => '<div class="chars-remaining">a</div>'-%>    
    <%= f.text_area :description, :required => false, :class => "mceEditor" -%>
    <%= f.text_area :code, :required => false -%>
  </table>

    <div class="edit-part-bottom">
       <div class="buttons">
         <%= image_submit_tag "buttons/btn-save.png", :class => "submit-input" %>
         <%= link_to image_tag("buttons/btn-cancel.png"), 
                     cancel_edit_part_my_helpedia_activity_path(@activity, :part => "activity_texts"), 
                     :class => "ajax-link",
                     :rel => "#{@activity.object_id}-activity-texts-spinner" -%>
       </div>
       <div class="edit-form-spinner">
         <%= image_tag "ajax-spinner.gif", :id => "#{@activity.object_id}-activity-texts-spinner", :style => "display: none" -%>
       </div>                            
     </div>     
    <%- end -%>
  </div>
</div>