<div id="location_data" class="edit-container">

  <%= render :partial => "/shared/profile_edit_header", :locals => { :header => "Daten", 
                                                 :object => @location,
                                                 :path => edit_part_my_helpedia_location_path(@location, :part => "location_data"), 
                                                 :prefix => "location_data",
                                                 :button => image_tag("buttons/btn-edit.png")
                                                } -%>  
  
  <div class="clearfloats edit-profile">
    <div class="two-column">
      <div class="column-50">
        <dl>
          <dt><%= Location.human_attribute_name("name") -%>:</dt>
          <dd><%=v @location.name -%></dd>
          <dt><%= Location.human_attribute_name("permalink") -%>:</dt>
          <dd><%=v @location.permalink -%></dd>
          <dt><%= Location.human_attribute_name("website") -%>:</dt>
          <dd><%=v @location.website -%></dd>
          <dt><%= Location.human_attribute_name("contact_person") -%>:</dt>
          <dd><%=v @location.contact_person -%></dd>
          <dt><%= Location.human_attribute_name("email") -%>:</dt>
          <dd><%=v @location.email -%></dd>
          <dt><%= Location.human_attribute_name("commentable") -%>:</dt>
          <dd><%= @location.commentable_humanized -%></dd>                
        </dl>          
      </div>
      <div class="column-50">
        <dl>
          <dt><%= Location.human_attribute_name("image") -%>:</dt>
          <dd><%= image_for(@location, "32x24c") -%></dd>          
          <dt><%= Location.human_attribute_name("phone") -%>:</dt>
          <dd><%=v @location.phone -%></dd>
          <dt><%= Location.human_attribute_name("fax") -%>:</dt>
          <dd><%=v @location.fax -%></dd>          
        </dl>          
      </div>
    </div>
  </div>
</div>
