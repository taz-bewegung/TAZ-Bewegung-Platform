<%- title "Suche" -%>
<%- breadcrumb "Suche".to_a -%>
<%- magick_header "Suche" -%>   

<% unless params[:i_search].blank? %>
<div class="view-filter">
  <h2 class="colored-21"><%=t "search.header.#{params[:i_search][:search_type].to_sym}" %></h2>  

  <%= layout_switch_icons(params[:list_type].to_sym, :list => url_for(params.merge(:list_type => "rows", :action => "change_view")),
                                                     :card => url_for(params.merge(:list_type => "cards", :action => "change_view")),
                                                     :maps => url_for(params.merge(:list_type => "maps", :action => "change_view"))) %>

   
   <div class="spinner"> 
   <%= image_tag "ajax-spinner.gif", 
                  :id => "table-spinner", 
                  :class => "table-spinner" -%>      
   </div>
   <br style="clear: both;">
</div>
<div id="sub-content-list">
  <%= render :partial => "list" %>
</div>
<% else %>
<p>Es wurden leider keine Ergebnisse gefunden.</p>
<% end %>