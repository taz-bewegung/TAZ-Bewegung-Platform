      <%= render_content_container("location_index_text", :cache_fragment => "location_index_teaser") %>
      <%= render_carousel_container("location_index_carousel", :cache_fragment => "location_index_teaser") %>
    </div>
  <% end %>
<%- end -%>

<%= render :partial => "/locations/index/shared/pagination_filter" %>

