<div class="profile-container">
  <div class="profile-container-top"> </div>
  <div class="profile-container-middle">
    <div class="split-bg">   
      <div class="profile-image">
        <div class="image-wrap">
          <%= image_for(@location, :large) %>
        </div>

        <%- if not (@location.participants + [@location.owner]).include?(current_user) %>
          <div class="profile-symphatize-button">
            <%= shadow_link_button("Sympathisieren".upcase, new_location_activity_membership_path(@location, :format => :lightbox), :css_class => "60-block remote-lightbox", :font_size => 22)%>
          </div>
        <%- end -%>
        
      </div>
      <div class="profile-content">
        <h2><%=h @location.title %></h2>
        <%= truncate secured_rte_text(@location.description, :plain => true), :length => 280 %>
        <%= link_to t(:"shared.links.more"), description_location_path(@location) %>
      </div><!-- profile-content -->
      
      <div class="profile-meta">

        <div class="meta-info">
          <h4>Adresse:</h4>
          <%= @location.address.to_html_long %>
        </div>

        <div class="meta-info">
          <h4>Eingetragen von:</h4>
          <%= user_profile_link_for @location.owner -%>
        </div>

      </div>
    </div>
  </div>  
</div>