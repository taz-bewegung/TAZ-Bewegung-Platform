<%= location_sub_menu(:overview) %> 
<div id="sub-content">
     
    <div class="overview-item">
      <h2><%= t(:"activity.public_profile.sub_content.tabs.overview.content.about_header") -%></h2>
      <%= truncate secured_rte_text(@location.description, :plain => true), :length => 285 %>
      <%= link_to t(:"shared.links.more"), description_location_path(@location) %>
    </div>

   <%- unless @location.activity_memberships.active.blank? -%> 
   <div class="overview-item">
     <h2><%= "Sympathisanten" -%></h2>
     <div class="clearfloats">
       <%- for membership in @location.activity_memberships.latest.active.limit(15) -%> 
       <div class="membership-image">
        <%= link_to image_for(membership.user, :"56x42c"), location_activity_memberships_path(@location), :title => h(membership.user.full_name) -%>
      </div>
       <%- end -%>
     </div>
     <br />
     <%= link_to "Alle Sympathisanten >>", location_activity_memberships_path(@location) %>
   </div>    
   <%- end -%>
   
</div>