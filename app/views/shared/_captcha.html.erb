<% unless captcha_passed?  %>
<tr>
  <th nowrap="nowrap" valign="top"><label for="commendation_sender_email">Spam-Schutz*:</label></th>
  <td class="input-area" valign="top">
    <table class="<%= last_captcha_attempt_failed? ? 'error-input' : 'normal-input' %> tt-width-140" border="0" cellpadding="0" cellspacing="0">
      <tbody>
        <tr>
          <td class="lo" valign="bottom" align="right"></td>
          <td class="mo" valign="bottom"></td>
          <td class="ro" align="left"></td>
        </tr>
        <tr>
          <td class="lm"></td>
          <td class="form-content">
        		<%= text_field_tag :captcha_answer, params[:captcha_answer], :size => 20, :maxlength => 40, :class => "tt-width-140" %>
          </td>
          <td class="rm"></td>
        </tr>
        <tr>
          <td class="lu" valign="top" align="right"></td>
          <td class="mu" valign="top"></td>
          <td class="ru" valign="top" align="left"></td>
        </tr>
      </tbody>
    </table>
    <span stlye="font-size: 10px; margin-bottom: 10px;">(<%= @captcha.question %>)</span>        		    
    <div class="commendation_sender_email tt-width-140" style="display: none;"> </div>
		<%= hidden_field_tag :captcha_uuid, @captcha.id %>    
  </td>
</tr>
<% end %>